@model ProductViewModel

@{
    ViewData["Title"] = "Edit Product";
}
<div class="container-fluid w-50 mt-2">
<h2>Edit Product</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prezzo"></label>
        <input asp-for="Prezzo" class="form-control" />
        <span asp-validation-for="Prezzo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descrizione"></label>
        <textarea asp-for="Descrizione" class="form-control"></textarea>
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Immagine"></label>
        <input asp-for="Immagine" type="file" class="form-control" />
        <span asp-validation-for="Immagine" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Immagine1"></label>
        <input asp-for="Immagine1" type="file" class="form-control" />
        <span asp-validation-for="Immagine" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Immagine2"></label>
        <input asp-for="Immagine2" type="file" class="form-control" />
        <span asp-validation-for="Immagine" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-between mt-3">
    
    <a asp-action="Index"  class="btn btn-secondary">Annulla</a>
            <button type="submit" class="btn btn-primary">Salva Cambiamenti</button>
        </div>
</form>
</div>