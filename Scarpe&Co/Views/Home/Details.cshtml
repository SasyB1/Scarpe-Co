@using Scarpe_Co.Entities;
@model Prodotto
@{
    ViewData["Title"] = "Product Details";
}
<div class="container text-center  ">
    <div class="row">
        <div class="col mt-2">
            <h2>@Model.Nome</h2>
        </div>
    </div>
    <div class="row justify-content-center align-items-center palette">
        <div class="col-lg-4 col-md-6 col-sm-12 color mb-3" style="width:300px;height:300px;">
            <img class="img-fluid" src="@Model.Immagine" alt="@Model.Nome" style="width:100%;height:100%;object-fit:cover;" />
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 color mb-3" style="width:300px;height:300px;">
            <img class="img-fluid" src="@Model.Immagine1" alt="Additional Image 1" style="width:100%;height:100%;object-fit:cover;" />
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 color mb-3" style="width:300px;height:300px;">
            <img class="img-fluid" src="@Model.Immagine2" alt="Additional Image 2" style="width:100%;height:100%;object-fit:cover;" />
        </div>
    </div>
    <div class="row mt-4 ">
        <div class="col-12 stats">
            <p class="fs-5">Prezzo: @Model.Prezzo.ToString("C")</p>
            <p class="fs-5"> @Model.Descrizione</p>
        </div>
    </div>
    <div class="row mt-4">    
        <div class="col">
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Sei sicuro di voler eliminare questo prodotto?');">
                <button type="submit" class="btn btn-danger w-100">Elimina</button>
            </form>
        </div>
        <div class="col">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-100">Edit</a>
        </div>
    </div>
</div>

